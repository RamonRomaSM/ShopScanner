<UserControl x:Class="TrabajoFinalDeGrado.funcionalidades.perfilFolder.PerfilControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrabajoFinalDeGrado.funcionalidades.perfilFolder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <Label
                Height="80"
                FontSize="25"
                Content="Nombre"
                HorizontalAlignment="Center"
                Background="Transparent"
                Foreground="White"
                />
            <Label
                Height="55"
                Content="Mis listas de la compra:"
                FontSize="18"
                Foreground="White"
                Background="Transparent"
                />

            <ScrollViewer Name="MyScroller" Background="Transparent" HorizontalContentAlignment="Center" >
                <ListView  Margin="50,0,50,0" x:Name="ListViewProducts" ItemsSource="{Binding listas}" SelectedItem="{Binding SelectedProduct}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Background="Transparent" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border HorizontalAlignment="Center"
                             CornerRadius="8"
                             BorderThickness="1" BorderBrush="DarkOrange"
                             Width="700"
                             Height="150"
                             Padding="5"
                             Background="#22202f"
                             Margin="10">   
                                <StackPanel Orientation="Vertical">
                                    <!--CONTENIDO-->
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>


                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>


                </ListView>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</UserControl>
